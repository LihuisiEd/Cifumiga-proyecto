<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.certificado.CertificadoActivity">

    <TextView
        android:id="@+id/textviewdniewofe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Certificado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lineardede"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textviewdniewofe">
        <Button
            android:id="@+id/btnFecCert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/blue_200"
            android:contentDescription="@string/seleccionar_fecha"
            android:fontFamily="@font/nunito_bold"
            android:text="Seleccionar"
            app:cornerRadius="100dp" />
        <EditText
            android:id="@+id/txtFecCert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:hint="Fecha de inicio"
            android:inputType="text"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_De"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/lineardede">
        <Button
            android:id="@+id/btnFinCert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/blue_200"
            android:contentDescription="@string/seleccionar_fecha"
            android:fontFamily="@font/nunito_bold"
            android:text="Seleccionar"
            app:cornerRadius="100dp" />
        <EditText
            android:id="@+id/txtFinCert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:hint="Fecha de inicio"
            android:inputType="text"/>
    </LinearLayout>

    <Button
        android:id="@+id/bdAddCertificado"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginTop="16dp"
        app:cornerRadius="100dp"
        android:layout_marginEnd="24dp"
        android:text="@string/guardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_De" />

</androidx.constraintlayout.widget.ConstraintLayout>