<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.kilometraje.UpdateKM">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <EditText
                    android:id="@+id/txtPlacaKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/placa"
                    android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnFecKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="100dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"

                    android:layout_marginEnd="8dp"
                    android:text="Seleccionar"
                    android:backgroundTint="@color/blue_200"
                    android:contentDescription="@string/seleccionar_fecha" />

                    <EditText
                        android:id="@+id/txtFecKM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:hint="@string/fecha"
                        android:inputType="none" />



            </LinearLayout>

                <EditText
                    android:id="@+id/txtInicioKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/km_inicial"
                    android:inputType="numberDecimal" />


                <EditText
                    android:id="@+id/txtFinKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/km_final"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/txtTotalKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    android:hint="@string/resultado"
                    android:inputType="none" />

            <Button
                android:id="@+id/bdCalcularKM"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="16dp"
                app:cornerRadius="100dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/blue_200"
                android:text="Calcular" />
            <Button
                android:id="@+id/bdUpdateKM"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:cornerRadius="100dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/blue_500"
                android:text="Guardar" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>