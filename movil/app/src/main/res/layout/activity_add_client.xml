<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.clients.AddClient">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:inputType="textPersonName"
                android:hint="@string/nombre_del_cliente"/>

            <EditText
                android:id="@+id/txtAddRuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:inputType="number"
                android:hint="@string/ruc"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_ope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/operacion_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:text="OperaciÃ³n" />

            <TextView
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:textSize="12sp"
                android:text="Los siguientes campos no son requeridos" />

            <EditText
                android:id="@+id/txtAddContacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:inputType="textPersonName"
                android:hint="@string/contacto"/>

            <EditText
                android:id="@+id/txtAddTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:inputType="phone"
                android:hint="@string/telefono"/>

            <EditText
                android:id="@+id/txtAddCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:inputType="textEmailAddress"
                android:hint="@string/correo"/>


            <Button
                android:id="@+id/bdAddClient"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:fontFamily="@font/nunito_bold"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:cornerRadius="100dp"
                android:layout_marginEnd="24dp"
                android:text="@string/guardar"
                />


        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>